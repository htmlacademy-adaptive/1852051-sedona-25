{
  "name": "sedona-25",
  "private": true,
  "description": "Личный проект «Седона» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "10.4.0",
    "browser-sync": "^2.27.10",
    "gulp": "^4.0.2",
    "gulp-less": "5.0.0",
    "gulp-libsquoosh": "^1.1.2",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-svgstore": "^9.0.0",
    "gulp-webp": "^4.0.1",
    "postcss": "8.3.11",
    "stylelint": "13.13.1",
    "stylelint-config-htmlacademy": "0.1.11"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "lint": "npm run editorconfig && npm run stylelint",
    "build": "gulp styles js fonts manifest favicon html sprite images webpjpg",
